@using CookieCartMVC.DataAccessLayer;
@model IEnumerable<Product>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
    @foreach (var product in Model)
    {
        <div class="row">
            <div class="col-12">
                <p>@product.Name ($@product.Price)
                    <a class="btn-sm btn-primary" href="@Url.Action("Add", "Cart", new { id = product.Id, quantity = 1 })"><span class="bi-cart-plus"></span></a>
                </p>
            </div>
        </div>
    }
</div>